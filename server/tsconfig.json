{
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "lib": ["ESNext"],
        "target":"ESNext",
        "moduleResolution":"NodeNext",
        "module": "NodeNext",
        "strict": false,
        "sourceMap": true,
        "esModuleInterop": true,
        "declaration": true,
        //Para que Typescript conozca los modelos de la base de datos
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    },
    "include": ["src/**/*.ts", "swagger.yaml/swagger.ts"],
    "exclude": ["src/**/*.test.ts"]
}